<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net6.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <UseWPF>true</UseWPF>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Images\Idel_logo.png" />
    <None Remove="Images\logo.ico" />
    <None Remove="Images\logoRounded.ico" />
    <None Remove="Images\logoWithName.png" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Images\Idel_logo.png" />
    <EmbeddedResource Include="Images\logoWithName.png" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Data.Sqlite" Version="8.0.0" />
    <PackageReference Include="Microsoft.Data.Sqlite.Core" Version="8.0.0" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Images\logo.ico" />
    <Resource Include="Images\logoRounded.ico" />
  </ItemGroup>

</Project>
